<header>
    page header
    
    <ul>
        <% if(locals.user) { %>
        <li>
            <a href = "/users/profile" >
                <%= locals.user.name%>
            </a>
           
        </li>
        <li>
            <button>
                <a href = "/users/signout">
                    Sign Out
                </a>
            </button>
        </li>
 
        <% } else { %>
            <li>
                <button>
                    <a href = "/users/signin">
                        Sign In
                    </a>
                </button>
            </li>
            <li>
                <button>
                    <a href = "/users/signup">
                        Sign Up
                    </a>
                </button>
            </li>


        <% } %>
    </ul>

</header>
