                <script>
      <% if (flash.success && flash.success.length > 0) { %>;
                        new Noty({
                            theme: 'sunset',
                            text: '<%= flash.success %>',
                            type: 'success',
                            layout: 'bottomRight',
                            timeout: 500
                        }).show();

      <% } %>
      <% if (flash.error && flash.error.length > 0) { %>
                        new Noty({
                            theme: 'sunset',
                            text: '<%= flash.error %>',
                            type: 'error',
                            layout: 'bottomRight',
                            timeout: 500
                        }).show();

      <% } %>
                </script>
